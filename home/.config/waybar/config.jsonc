{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar at the bottom of your screen
  "height": 24, // Waybar height
  // "width": 1366, // Waybar width
  // Choose the order of the modules
  "modules-left": ["niri/workspaces", "niri/mode"],
  "modules-center": ["niri/window"],
  "modules-right": [
    "pulseaudio",
    "network",
    "bluetooth",
    "cpu",
    "memory",
    "battery",
    "tray",
    "clock",
  ],
  "niri/workspaces": {
    "disable-scroll": true,
    "all-outputs": false,
    "format": "{icon}",
    "format-icons": {
      "1:web": "",
      "2:code": "",
      "3:term": "",
      "4:work": "",
      "5:music": "",
      "6:docs": "",
      "urgent": "",
      "focused": "",
      "default": "",
    },
  },
  "niri/mode": {
    "format": "<span style=\"italic\">{}</span>",
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10,
  },
  "clock": {
    "format-alt": "{:%d.%m.%Y}",
  },
  "cpu": {
    "format": "{usage}% ",
  },
  "memory": {
    "format": "{}% ",
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "format": "{capacity}% {icon}",
    "format-good": "{capacity}% {icon}", // An empty format will hide the module
    "format-full": "{capacity}% {icon}",
    "format-icons": ["", "", "", "", ""],
  },
  "network": {
    // "interface": "wlp2s0", // (Optional) To force the use of this interface
    "format-wifi": "{essid} ({signalStrength}%) ",
    "format-ethernet": "{ifname}: {ipaddr}/{cidr} ",
    "format-disconnected": "Disconnected ⚠",
    "on-click": "alacritty -e impala",
  },

  "bluetooth": {
    "format": "",
    "tooltip": true,
      "tooltip-format": "{status}",
    "format-connected": "",
    "format-disabled": "",
    "on-click": "alacritty -e bluetui"
  },

  "pulseaudio": {
    //"scroll-step": 1,
    "format": "{volume}% {icon}",
    "format-muted": "",
    "format-icons": {
      "headphones": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["",""],
    },
    "on-click": "pavucontrol",
  },
}
